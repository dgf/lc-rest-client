<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://adobe.com/idp/dsc/component/document">
    <component-id>de.htwb.lc.RestClient</component-id>
    <version>${project.version}</version>
    <supports-export>true</supports-export>
    <services>
        <service name="RestClient" orchestrateable="true" title="HTTP REST Client">
            <description>REST client component</description>
            <auto-deploy category-id="HTW" major-version="1" minor-version="0" />
            <implementation-class>de.htwb.lc.RestClient</implementation-class>
            <small-icon>icons/network_service16.png</small-icon>
            <large-icon>icons/network_service48.png</large-icon>
            <operations>
                <operation name="get">
                    <hint>HTTP GET request</hint>
                    <input-parameter name="url" title="URL" type="java.lang.String">
                        <supported-expr-types>Literal,XPath,Template,Variable</supported-expr-types>
                    </input-parameter>
                    <output-parameter name="response" title="Response" type="de.htwb.lc.Response" />
                    <faults>
                        <fault name="IOException" type="java.io.IOException" />
                    </faults>
                </operation>
                <operation name="post">
                    <hint>HTTP POST request</hint>
                    <input-parameter name="url" title="URL" type="java.lang.String">
                        <supported-expr-types>Literal,XPath,Template,Variable</supported-expr-types>
                    </input-parameter>
                    <input-parameter name="body" title="Body" type="java.lang.String">
                        <supported-expr-types>Literal,XPath,Template,Variable</supported-expr-types>
                    </input-parameter>
                    <input-parameter name="contentType" title="Content Type" type="java.lang.String">
                        <supported-expr-types>Literal,XPath,Template,Variable</supported-expr-types>
                    </input-parameter>
                    <input-parameter name="charset" title="Charset" type="java.lang.String">
                        <supported-expr-types>Literal,XPath,Template,Variable</supported-expr-types>
                    </input-parameter>
                    <output-parameter name="response" title="Response" type="de.htwb.lc.Response" />
                    <faults>
                        <fault name="IOException" type="java.io.IOException" />
                    </faults>
                </operation>
            </operations>
        </service>
    </services>
</component>
